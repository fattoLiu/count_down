<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

    <com.fatto.library.widget.RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/BottomBar_RadioButton"
            android:drawableTop="@drawable/selector_bottom_bar_home"
            android:text="@string/home" />

        <RadioButton
            android:id="@+id/rb_phone"
            style="@style/BottomBar_RadioButton"
            android:drawableTop="@drawable/selector_bottom_bar_phone"
            android:text="@string/phone" />

        <RadioButton
            android:id="@+id/rb_nearby"
            style="@style/BottomBar_RadioButton"
            android:drawableTop="@drawable/selector_bottom_bar_nearby"
            android:text="@string/discovery" />

        <RadioButton
            android:id="@+id/rb_more"
            style="@style/BottomBar_RadioButton"
            android:drawableTop="@drawable/selector_bottom_bar_more"
            android:text="@string/more" />
    </com.fatto.library.widget.RadioGroup>
</LinearLayout>